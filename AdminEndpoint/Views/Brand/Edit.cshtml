@model Application.Products.Dto.BrandDto
@{
    ViewData["Title"] = "ویرایش برند";
}
@section Style{
    <link href="/assets/pages/jquery.filer/css/themes/jquery.filer-dragdropbox-theme.css" type="text/css" rel="stylesheet">
    <link href="/assets/pages/jquery.filer/css/jquery.filer.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/bower_components/bootstrap-tagsinput/css/bootstrap-tagsinput.css">
}
<div class="card">
    <div class="card-header">
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="feather icon-maximize full-card"></i></li>
                <li><i class="feather icon-minus minimize-card"></i></li>
                <li><i class="feather icon-trash-2 close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#tab_1" role="tab">مشخصات</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " data-toggle="tab" href="#tab_2" role="tab">تصویر</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tab_3" role="tab">سئو</a>
            </li>
        </ul>
        <!-- Tab panes -->
        <form method="post" class="col-lg-12" asp-controller="Brand" asp-action="Update">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="tab-content card-block">
                <div class="tab-pane active" id="tab_1" role="tabpanel">
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label asp-for="Title" class="col-form-label"></label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="EnTitle" class="col-form-label"></label>
                            <input asp-for="EnTitle" class="form-control">
                            <span asp-validation-for="EnTitle" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="IsActive" class="col-form-label"></label>
                            <div class="col-sm-12 col-xl-4 m-b-30">
                                <input asp-for="IsActive" type="checkbox" class="js-single">
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label asp-for="Order" class="col-form-label"></label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="Description" class="col-form-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="tab-pane " id="tab_2" role="tabpanel">
                    <input type="file" asp-for="Image" id="filer_input2" style="position: absolute; left: -9999px; top: -9999px; z-index: -9999;">
                </div>
                <div class="tab-pane" id="tab_3" role="tabpanel">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="SeoTitle" class="col-form-label"></label>
                            <input asp-for="SeoTitle" class="form-control">
                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="SeoUrl" class="col-form-label"></label>
                            <input asp-for="SeoUrl" class="fa-th-large form-control">
                            <span asp-validation-for="SeoUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="SeoDescription" class="col-form-label"></label>
                            <textarea asp-for="SeoDescription" class="form-control"></textarea>
                            <span asp-validation-for="SeoDescription" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="SeoKeyword" class="col-form-label"></label>
                            <br />
                            <input data-role="tagsinput" asp-for="SeoKeyword" class="tag label label-success" />
                            <span asp-validation-for="SeoKeyword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label asp-for="SeoImage" class="col-form-label"></label>
                            <input type="file" asp-for="SeoImage" id="filer_input1" style="position: absolute; left: -9999px; top: -9999px; z-index: -9999;">
                            <span asp-validation-for="SeoImage" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr />
                <button type="submit" class="btn btn-success">ذخیره</button>
                <a href="/Brand/list" class="btn btn-warning">بازگشت به لیست</a>
                <br />
                <span asp-validation-for="Title" class="text-danger"></span>
                <br />
                <span asp-validation-for="SeoTitle" class="text-danger"></span>
                <br />
                <span asp-validation-for="SeoUrl" class="text-danger"></span>
            </div>
        </form>

    </div>
</div>

@section Scripts{
    <script src="/assets/pages/jquery.filer/js/jquery.filer.min.js"></script>
    <script src="/assets/pages/filer/custom-filer.js" type="text/javascript"></script>
    <!-- Switch component js -->
    <script type="text/javascript" src="/bower_components/switchery/js/switchery.min.js"></script>
    <script type="text/javascript" src="/assets/pages/advance-elements/swithces.js"></script>
    <!-- Tags js -->
    <script type="text/javascript" src="/bower_components/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.10.4/typeahead.bundle.min.js"></script>
    
<script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                dir: "rtl"
            });
        });
        $.validator.setDefaults({
            ignore: ""
        });
    </script>
}
<!-- jquery file upload js -->
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

