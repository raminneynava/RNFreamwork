@model Application.Communication.Dtos.SocialNetworkDto
@{
    ViewData["Title"] = "ویرایش شبکه احتماعی";
}
<div class="card">
    <div class="card-header">
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="feather icon-maximize full-card"></i></li>
                <li><i class="feather icon-minus minimize-card"></i></li>
                <li><i class="feather icon-trash-2 close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#tab_1" role="tab">مشخصات</a>
            </li>
        </ul>
        <!-- Tab panes -->
        <form method="post" class="col-lg-12" asp-controller="SocialNetwork" asp-action="Update">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="tab-content card-block">
                <div class="tab-pane active" id="tab_1" role="tabpanel">
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label asp-for="SocialProfile" class="col-form-label"></label>
                            <input asp-for="SocialProfile" class="form-control">
                            <span asp-validation-for="SocialProfile" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="SocialType" class="col-form-label"></label>
                            <select asp-for="SocialType" asp-items="Html.GetEnumSelectList<Infrastructure.Entities.Communication.Socials>()" class="form-control"></select>
                            <span asp-validation-for="SocialType" class="text-danger"></span>
                        </div>

                        <div class="col-lg-3">
                            <label asp-for="Order" class="col-form-label"></label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="IsActive" class="col-form-label"></label>
                            <div class="col-sm-12 col-xl-4 m-b-30">
                                <input asp-for="IsActive" type="checkbox" class="js-single">
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr />
                <button type="submit" class="btn btn-success">ذخیره</button>
                <a href="/SocialNetwork/list" class="btn btn-warning">بازگشت به لیست</a>
            </div>
        </form>

    </div>
</div>

@section Scripts{
    <!-- Switch component js -->
    <script type="text/javascript" src="/bower_components/switchery/js/switchery.min.js"></script>
    <script type="text/javascript" src="/assets/pages/advance-elements/swithces.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.10.4/typeahead.bundle.min.js"></script>
    <script>
        $.validator.setDefaults({
            ignore: ""
        });
    </script>
}
<!-- jquery file upload js -->
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }




