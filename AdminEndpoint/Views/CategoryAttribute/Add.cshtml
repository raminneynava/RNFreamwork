@model Application.Attribute.Dtos.CategoryAttributeSpeciDto
@{
    ViewData["Title"] = "افزدن برند";
}
@section Style{
    <link href="~/bower_components/select2/css/select2.min.css" rel="stylesheet" />
}
<div class="card">
    <div class="card-header">
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="feather icon-maximize full-card"></i></li>
                <li><i class="feather icon-minus minimize-card"></i></li>
                <li><i class="feather icon-trash-2 close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block">

        <!-- Tab panes -->
        <form method="post" class="col-lg-12" asp-controller="CategoryAttribute" asp-action="Insert">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" value="@ViewBag.catid" id="CategoryId" name="CategoryId" />
            <div class="tab-content card-block">
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label asp-for="AttributeId" class="col-form-label"></label>
                        <select asp-for="AttributeId" asp-items="ViewBag.attrlist" class="js-example-basic-single"></select>
                        <span asp-validation-for="AttributeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-3">
                        <label asp-for="IsSelectList" class="col-form-label"></label>
                        <div class="col-sm-12 col-xl-4 m-b-30">
                            <input asp-for="IsSelectList" type="checkbox" class="js-single">
                        </div>
                        <span asp-validation-for="IsSelectList" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3">
                        <label asp-for="IsColor" class="col-form-label"></label>
                        <div class="col-sm-12 col-xl-4 m-b-30">
                            <input asp-for="IsColor" type="checkbox" class="js-single">
                        </div>
                        <span asp-validation-for="IsColor" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3">
                        <label asp-for="isFilter" class="col-form-label"></label>
                        <div class="col-sm-12 col-xl-4 m-b-30">
                            <input asp-for="isFilter" type="checkbox" class="js-single">
                        </div>
                        <span asp-validation-for="isFilter" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <button type="submit" class="btn btn-success">ذخیره</button>
                <a href="/Brand/list" class="btn btn-warning">بازگشت به لیست</a>
                <br />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <!-- Switch component js -->
    <script type="text/javascript" src="/bower_components/switchery/js/switchery.min.js"></script>
    <script type="text/javascript" src="/assets/pages/advance-elements/swithces.js"></script>
    <script src="~/bower_components/select2/js/select2.full.min.js"></script>
    <!-- Tags js -->
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                dir: "rtl"
            });
        });
        $.validator.setDefaults({
            ignore: ""
        });
    </script>
}
<!-- jquery file upload js -->
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }


